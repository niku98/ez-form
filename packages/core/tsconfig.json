{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"paths": {
			"src/*": ["./src/*"]
		},
		"baseUrl": "./",
		"outDir": "./dist",
		"target": "ESNext",
		"module": "ESNext",
		"allowJs": false,
		"declaration": true,
		"preserveSymlinks": true,
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "Bundler"
	},
	"exclude": ["dist"],
	"include": ["src", "__tests__/**/*"]
}
