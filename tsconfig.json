{
	"compilerOptions": {
		"target": "ESNext",
		"allowJs": false,
		"module": "ESNext",
		"paths": {
			"@niku/ez-form": ["./dist"],
			"@/*": ["./src/*"]
		},
		"baseUrl": "./",
		"outDir": "./dist_types",
		"declaration": true,
		"preserveSymlinks": true,
		"isolatedModules": true,
		"strict": true,
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"moduleResolution": "NodeNext"
	},
	"exclude": ["dist"],
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
